          if (!clase || !instructor || !horaInicio || !fecha || !horaFinal || !todoslmeseslaboral || !tdiaLaboral || !diaLaboral || !estado) {
            Swal.fire(
              'Todos los campos son obligatorios',
              '',
              'error'
            )

            // Validar que la fecha sea mayor o igual a la fecha actual
            var fechaActual = new Date().toISOString().split('T')[0];
            if (fecha < fechaActual) {
              Swal.fire('Error', 'No es posible registrar una Agenda en dÃ­as anteriores a la fecha actual.', 'error');
              return;
            }

            // Validar que la hora de inicio y la hora final no estÃ©n vacÃ­as
            if (!horaInicio || !horaFinal) {
              Swal.fire('Error', 'Por favor, ingrese la hora de inicio y la hora final.', 'error');
              return;
            }

            // Validar que la hora de inicio sea inferior a la hora final
            if (horaInicio >= horaFinal) {
              Swal.fire({
                icon: 'error',
                title: 'La hora de Inicio debe ser inferor a la hora final',
                showConfirmButton: false,
                timer: 1500
