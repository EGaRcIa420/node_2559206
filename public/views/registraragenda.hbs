<script>
  // Validar que la hora de inicio sea inferior a la hora final
  document.getElementById("horaInicio").addEventListener("change", function() {
    var horaInicio = this.value;
    var horaFinal = document.getElementById("horaFinal").value;
    
    if (horaFinal && horaInicio >= horaFinal) {
      alert("La hora de inicio debe ser inferior a la hora final.");
      this.value = "";
    }
  });
  
  document.getElementById("horaFinal").addEventListener("change", function() {
    var horaInicio = document.getElementById("horaInicio").value;
    var horaFinal = this.value;
    
    if (horaInicio && horaInicio >= horaFinal) {
      alert("La hora final debe ser superior a la hora de inicio.");
      this.value = "";
    }
  });
